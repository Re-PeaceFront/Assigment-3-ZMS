<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="[http://javafx.com/javafx/21](http://javafx.com/javafx/21)" xmlns:fx="[http://javafx.com/fxml/1](http://javafx.com/fxml/1)" fx:controller="com.example.assigment3zms.Controllers.EnclosureViewController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label fx:id="enclosureNameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Enclosure Name" />
    <Label text="Animals currently in this enclosure:" />

    <ListView fx:id="animalListView" VBox.vgrow="ALWAYS" />

    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#onAddAnimalClick" text="Add Animal" />
        <Button fx:id="editAnimalButton" onAction="#onEditAnimalClick" text="Edit Selected" />
        <Button fx:id="removeAnimalButton" onAction="#onRemoveAnimalClick" text="Remove Selected" />
    </HBox>

    <Button onAction="#onBackClick" text="Back" />
</VBox>
